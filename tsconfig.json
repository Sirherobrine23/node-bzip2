{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": false,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowJs": true,
    "composite": true,
    "rootDir": "./src/ts",
    "lib": [
      "ESNext"
    ]
  },
  "exclude": [
    "**/*.test.ts",
    "**/test*/**",
    "node_modules/"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true
  }
}